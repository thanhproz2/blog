<h1 style="text-align:center; color:blue">Listing articles</h1>
<table>
  <tr style="background-color: #d4ffaa">
    <th>Title</th>
    <th>Content</th>
  </tr>

  <% @articles.each do |article| %>

    <tr>
      <td style="background-color: #9eefec" >
        <strong><%= article.title %>  </strong>
        <p style="font-size:11px"><%= article.created_at.strftime('%b %d, %Y') %> <br> by <%= article.user.email%>| Comments (<%=article.comments.count%>)</p>
      </td>
      <td style="background-color:#fcefef"><%= article.text.truncate(358).html_safe() %></td>
      
      <td><%= link_to 'Show', article_path(article) ,  class: "btn btn-sm btn-default" %></td>
      <%if article.user == current_user %>
      <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-sm btn-default"%></td>
       <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-default" %></td>
           <%   end%>
    </tr>
  <% end %>
</table>
</body>
</html>














